<Window x:Class="Loading_Bar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loading_Bar"
        mc:Ignorable="d"
        Title="MainWindow" Height="24" Width="200" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Grid>

        <ProgressBar HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="200" IsIndeterminate="True"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Loading" VerticalAlignment="Top" Width="200" Height="24" FontWeight="Bold" FontFamily="Segoe UI Historic" FontSize="16"/>
    </Grid>
</Window>
